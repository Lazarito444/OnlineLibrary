@using OnlineLibrary.Core.Domain.Entities
@model List<Publisher>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Publishers | Online Library";
}

<div class="container-fluid m-12">
    <h1>Publishers</h1>
    <br><br>
    <a class="btn btn-primary" asp-controller="Publisher" asp-action="Create">Create Publisher</a>
    <br><br>
    
    @if (Model.Count == 0)
    {
        <h2>No Publishers found</h2>
    }
    else
    {
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Publisher Name</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (Publisher publisher in Model)
            {
                <tr>
                    <td>@publisher.Id</td>
                    <td>@publisher.Name</td>
                    <td><a class="btn-warning btn" asp-route-id="@publisher.Id" asp-controller="Publisher" asp-action="Edit">Edit</a> 
                        <a class="btn-danger btn" asp-route-id="@publisher.Id" asp-controller="Publisher" asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    
</div>