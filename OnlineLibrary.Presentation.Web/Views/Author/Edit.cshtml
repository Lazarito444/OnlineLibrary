@using OnlineLibrary.Core.Domain.Entities
@model Author

@{
    ViewData["Title"] = "Edit Author | OL";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<br>
@if ((string?)TempData[""] == "true")
{
<div class="alert alert-danger" role="alert">
    Fill out all the fields!
</div>
}
<br>

<form asp-controller="Author" asp-action="Edit" method="post">
    <div class="input-group mb-3">
        <span class="input-group-text">Name</span>
        <input asp-for="FullName" type="text" class="form-control" placeholder="Full Name" aria-label="Full Name">
    </div>
    <p class="text-center">
        <button class="btn btn-primary">Edit</button>
        <a asp-controller="Author" asp-action="Index" class="btn btn-secondary">Go back</a>
    </p>
    <input type="hidden" asp-for="Id" value="@Model.Id">
</form>