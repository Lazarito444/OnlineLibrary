@using OnlineLibrary.Core.Domain.Entities
@model List<Book>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Books | Online Library";
}

<div class="container-fluid m-12">
    <h1>Books</h1>
    <br><br>
    <a class="btn btn-primary" asp-controller="Book" asp-action="Create">Create Book</a>
    <br><br>

    @if (Model.Count == 0)
    {
    <h2>No Books found</h2>
    }
    else
    {
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Publisher</th>
            <th scope="col">Published Date</th>
            <th scope="col">Pages Count</th>
            <th scope="col">Genre</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Book book in Model)
        {
        <tr>
            <td>@book.Id</td>
            <td>@book.Title</td>
            <td>@book.Author.FullName</td>
            <td>@book.Publisher.Name</td>
            <td>@book.PublishedDate</td>
            <td>@book.PagesCount</td>
            <td>@book.BookGenre</td>
            <td><a class="btn-warning btn" asp-route-id="@book.Id" asp-controller="Book" asp-action="Edit">Edit</a>
                <a class="btn-danger btn" asp-route-id="@book.Id" asp-controller="Book" asp-action="Delete">Delete</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
    }

</div>