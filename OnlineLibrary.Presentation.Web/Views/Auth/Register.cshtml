@using OnlineLibrary.Core.Domain.Entities
@model User
@{
  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <title>Sign up | Online Library</title>
</head>
<body class="d-flex min-vh-100 justify-content-center align-items-center">
<div class="card" style="width: 32rem;">
  <div class="card-body">
    <h5 class="card-title fs-3">Sign up</h5>
    <h6 class="card-subtitle mb-2 text-muted">Online Library Management System</h6>
    <br>
    @if ((string?)TempData[""] == "true")
    {
      <div class="alert alert-danger" role="alert">
        Fill out all the fields!
      </div>
    }
    @if ((string?)TempData["emailTaken"] == "true")
    {
    <div class="alert alert-danger" role="alert">
      That email is already taken!
    </div>
    }
    <br>
    <form asp-controller="Auth" asp-action="Register" method="post">
      <div class="input-group mb-3">
        <span class="input-group-text">Full Name</span>
        <input asp-for="FullName" type="text" class="form-control" placeholder="Full name" aria-label="Full name">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">Date of birth</span>
        <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Date of birth" aria-label="Date of birth">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">Email</span>
        <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Email">
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">Password</span>
        <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-label="Password">
      </div>
      
      <button class="btn btn-primary">Sign up</button>
    </form>
    <br>
    <br>
    <p>Already have an account? <a asp-controller="Auth" asp-action="Login" class="card-link">Log In</a></p>
  </div>
</div>
</body>
</html>